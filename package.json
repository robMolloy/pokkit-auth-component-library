{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "tsc1": "cd apps/web && tsc --noemit --watch",
    "tsc2": "cd apps/pokkit-auth-docs && tsc --noemit --watch",
    "tsc3": "cd apps/docs && tsc --noemit --watch",
    "tsc4": "cd packages/ui && tsc --noemit --watch"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
